@model Portfolio
@{
    ViewData["Title"] = "Index";
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Portfolio Details</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Portfolio Details</li>
                </ol>
            </div>
             
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
                        <div class="swiper-wrapper align-items-center">
                            
                           <div class="swiper-slide">
                               <img src="~/upload/portfolio/@Model.productImage.FirstOrDefault(x=>x.PortfolioId == Model.Id ).Name" alt="">
                           </div>

                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>@Model.ProductTitle1</h3>
                        <ul>
                            <li><strong>Category</strong>: @Model.Category</li>
                            <li><strong>Client</strong>: @Model.Client</li>
                            <li><strong>Project date</strong>: @Model.ProjectDate</li>
                            <li><strong>Project URL</strong>: <a href="#">@Model.Url</a></li>
                        </ul>
                    </div>
                    <div class="portfolio-description">
                        <h2>@Model.PorjectTitle2</h2>
                        <p>
                            @Model.Desc
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->
